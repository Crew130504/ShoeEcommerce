<?xml version="1.0" encoding="UTF-8"?>
<jsp-config>
    <taglib>
        <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
        <taglib-location>/WEB-INF/lib/jstl-1.2.jar</taglib-location>
    </taglib>
    <servlet>
    <servlet-name>ControladorAdmin</servlet-name>
    <servlet-class>controlador.ControladorAdmin</servlet-class>
    <multipart-config>
        <!-- Configuración de 50MB máximo para archivos subidos -->
        <max-file-size>52428800</max-file-size>
        <max-request-size>52428800</max-request-size>
        <file-size-threshold>0</file-size-threshold>
    </multipart-config>
</servlet>

</jsp-config>

